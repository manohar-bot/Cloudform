{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "Creating EC2 Instance along with VPC Components",
    "Parameters": {
        "Keys": {
            "Description": "Select Key",
            "Type": "AWS::EC2::KeyPair::KeyName",
            "Default": "Manu"
	}
        "ImageID": {
            "Description": "Select Image-ID",
            "Type": "String",
            "Default": "ami-081bb417559035fe8",
            "AllowedValues": [
                "ami-081bb417559035fe8",
                "ami-0a9d27a9f4f5c0efc",
                "ami-0d758c1134823146a",
                "ami-006650c37d04e2c1e"
            ]
        },
        "InstanceType": {
            "Description": "Select Instance Type",
            "Type": "String",
            "Default": "t2.micro",
            "AllowedValues": [
                "t2.micro",
                "t2.small",
                "t2.medium",
                "t2.large",
                "t2.xlarge"
            ]
        },
        "CIDRforVPC": {
            "Description": "CIDR for VPC",
            "Type": "String",
            "Default": "10.0.0.0/16"
        },
        "AZ1": {
            "Description": "Select AZ for Subnet One",
            "Type": "String",
            "Default": "ap-south-1a",
            "AllowedValues": [
                "ap-south-1a",
                "ap-south-1b",
                "ap-south-1c"
            ]
        },
        "AZ2": {
            "Description": "Select AZ for Subnet Two",
            "Type": "String",
            "Default": "ap-south-1b",
            "AllowedValues": [
                "ap-south-1a",
                "ap-south-1b",
                "ap-south-1c"
            ]
        },
        "CIDRforSN1": {
            "Description": "CIDR for Subnet One",
            "Type": "String",
            "Default": "10.0.1.0/24"
        },
        "CIDRforSN2": {
            "Description": "CIDR for Subnet One",
            "Type": "String",
            "Default": "10.0.2.0/24"
        }
    },
    "Resources": {
        "EC2InstanceOne": {
            "Type": "AWS::EC2::Instance",
            "Properties": {
                "KeyName": {
                    "Ref": "Keys"
                },
                "ImageId": {
                    "Ref": "ImageID"
                },
                "InstanceType": {
                    "Ref": "InstanceType"
                },
                "Monitoring": "true",
                "SecurityGroupIds": [
                    {
                        "Ref": "Security"
                    }
                ],
                "SubnetId": {
                    "Ref": "SubnetOne"
                },
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "EC2 instance One from Cloudformation"
                    }
                ],
                "UserData": {
                    "Fn::Base64": {
                        "Fn::Join": [
                            "",
                            [
                                "#!/bin/bash\n",
                                "yum install httpd -y\n",
                                "systemctl start httpd\n",
                                "systemctl enable httpd\n",
                                "echo 'Welcome to Cloudformation from Instance One' > /var/www/html/index.html\n"
                            ]
                        ]
                    }
                }
            }
        },
        "EC2InstanceTwo": {
            "Type": "AWS::EC2::Instance",
            "Properties": {
                "KeyName": {
                    "Ref": "Keys"
                },
                "ImageId": {
                    "Ref": "ImageID"
                },
                "InstanceType": {
                    "Ref": "InstanceType"
                },
                "Monitoring": "true",
                "SecurityGroupIds": [
                    {
                        "Ref": "Security"
                    }
                ],
                "SubnetId": {
                    "Ref": "SubnetTwo"
                },
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "EC2 instance Two from Cloudformation"
                    }
                ],
                "UserData": {
                    "Fn::Base64": {
                        "Fn::Join": [
                            "",
                            [
                                "#!/bin/bash\n",
                                "yum install httpd -y\n",
                                "systemctl start httpd\n",
                                "systemctl enable httpd\n",
                                "echo 'Welcome to Cloudformation from Instance Two' > /var/www/html/index.html\n"
                            ]
                        ]
                    }
                }
            }
        },
        "VPC": {
            "Type": "AWS::EC2::VPC",
            "Properties": {
                "CidrBlock": {
                    "Ref": "CIDRforVPC"
                },
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "VPC from CLoudformation"
                    }
                ]
            }
        },
        "SubnetOne": {
            "Type": "AWS::EC2::Subnet",
            "Properties": {
                "AvailabilityZone": {
                    "Ref": "AZ1"
                },
                "MapPublicIpOnLaunch":"true",
                "VpcId": {
                    "Ref": "VPC"
                },
                "CidrBlock": {
                    "Ref": "CIDRforSN1"
                },
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "Subnet one from Cloud formation"
                    }
                ]
            }
        },
        "SubnetTwo": {
            "Type": "AWS::EC2::Subnet",
            "Properties": {
                "AvailabilityZone": {
                    "Ref": "AZ2"
                },
                "MapPublicIpOnLaunch":"true",
                "VpcId": {
                    "Ref": "VPC"
                },
                "CidrBlock": {
                    "Ref": "CIDRforSN2"
                },
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "Subnet two from Cloud formation"
                    }
                ]
            }
        },
        "IG": {
            "Type": "AWS::EC2::InternetGateway",
            "Properties": {
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "Internet Gateway from Cloud formation"
                    }
                ]
            }
        },
        "AttachGateway": {
            "Type": "AWS::EC2::VPCGatewayAttachment",
            "Properties": {
                "VpcId": {
                    "Ref": "VPC"
                },
                "InternetGatewayId": {
                    "Ref": "IG"
                }
            }
        },
        "RouteTable": {
            "Type": "AWS::EC2::RouteTable",
            "Properties": {
                "VpcId": {
                    "Ref": "VPC"
                },
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "Route table from IG"
                    }
                ]
            }
        },
        "Route": {
            "Type": "AWS::EC2::Route",
            "Properties": {
                "RouteTableId": {
                    "Ref": "RouteTable"
                },
                "DestinationCidrBlock": "0.0.0.0/0",
                "GatewayId": {
                    "Ref": "IG"
                }
            }
        },
        "AssociateRouteTable1": {
            "Type": "AWS::EC2::SubnetRouteTableAssociation",
            "Properties": {
                "SubnetId": {
                    "Ref": "SubnetOne"
                },
                "RouteTableId": {
                    "Ref": "RouteTable"
                }
            }
        },
        "AssociateRouteTable2": {
            "Type": "AWS::EC2::SubnetRouteTableAssociation",
            "Properties": {
                "SubnetId": {
                    "Ref": "SubnetTwo"
                },
                "RouteTableId": {
                    "Ref": "RouteTable"
                }
            }
        },
        "Security": {
            "Type": "AWS::EC2::SecurityGroup",
            "Properties": {
                "GroupDescription": "SG for Instances and ELB",
                "SecurityGroupIngress": [
                    {
                        "FromPort": "80",
                        "ToPort": "80",
                        "IpProtocol": "tcp",
                        "CidrIp": "0.0.0.0/0"
                    },
                    {
                        "FromPort": "22",
                        "ToPort": "22",
                        "IpProtocol": "tcp",
                        "CidrIp": "0.0.0.0/0"
                    },
                    {
                        "FromPort": "443",
                        "ToPort": "443",
                        "IpProtocol": "tcp",
                        "CidrIp": "0.0.0.0/0"
                    }
                ],
                "VpcId": {
                    "Ref": "VPC"
                },
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "Security group from Cloud Formation"
                    }
                ]
            }
        },
        "LoadBalancer": {
            "Type": "AWS::ElasticLoadBalancing::LoadBalancer",
            "Properties": {
                "Instances": [
                    {
                        "Ref": "EC2InstanceOne"
                    },
                    {
                        "Ref": "EC2InstanceTwo"
                    }
                ],
                "Listeners": [
                    {
                        "InstancePort": "80",
                        "LoadBalancerPort": "80",
                        "Protocol": "HTTP"
                    }
                ],
                "SecurityGroups": [
                    {
                        "Ref": "Security"
                    }
                ],
                "Subnets": [
                    {
                        "Ref": "SubnetOne"
                    },
                    {
                        "Ref": "SubnetTwo"
                    }
                ],
                "HealthCheck": {
                    "HealthyThreshold": "3",
                    "Interval": "15",
                    "Target": "HTTP:80/",
                    "Timeout": "10",
                    "UnhealthyThreshold": "2"
                },
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "ELB"
                    }
                ]
            }
        }
    }
}
